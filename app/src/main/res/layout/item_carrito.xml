<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/bg_item_carrito"
    android:gravity="center_vertical">

    <!-- Checkbox para seleccionar -->
    <CheckBox
        android:id="@+id/checkbox_seleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"/>

    <!-- Imagen miniatura -->
    <ImageView
        android:id="@+id/img_producto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="8dp"/>

    <!-- Contenedor de texto y controles -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="4dp">

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cartItTitulo"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <!-- Fecha de salida -->
        <TextView
            android:id="@+id/txt_fecha_salida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cartItFechaSalida"
            android:textSize="12sp"
            android:textColor="#777777"/>

        <!-- Cupos disponibles -->
        <TextView
            android:id="@+id/txt_cupos_disponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cartItCupos"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <!-- Controles de cantidad y precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cartItCantidad"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:entries="@array/cantidades"/>

            <TextView
                android:id="@+id/txt_precio_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cartItPrecio"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <!-- BotÃ³n eliminar -->
    <ImageButton
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:contentDescription="Eliminar"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@android:color/holo_red_dark" />

</LinearLayout>
