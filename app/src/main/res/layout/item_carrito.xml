<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/cart_it_shape"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_seleccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/img_producto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="8dp"
            android:contentDescription="@string/cartItDescImag"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cartItTitulo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItFechaSalida"
                    android:textSize="12sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/txt_fecha_salida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/cartItFechaSalidaNum"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItCupos"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/txt_cupos_disponibles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItCuposNum"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItPrecioU"
                    android:textSize="14sp"
                    android:textColor="#444444"/>
                <TextView
                    android:id="@+id/txt_precio_unitario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItPrecioUnum"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItPrecio"
                    android:textSize="14sp"
                    android:textColor="#444444" />
                <TextView
                    android:id="@+id/txt_precisub_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItPrecioNum"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Stepper debajo del Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cartItCantidad"
                    android:textSize="14sp"
                    android:textColor="#444444"/>

                <LinearLayout
                    android:id="@+id/stepper_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cartItResta"
                        android:minWidth="36dp"
                        android:minHeight="36dp"
                        android:padding="0dp"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_cantidad"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:text="@string/cartItnum"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cartItSuma"
                        android:minWidth="36dp"
                        android:minHeight="36dp"
                        android:padding="0dp"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Fin Stepper -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cartItmedios_pago"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/item_spinner_medio_pago"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cart_it_delete"
            android:contentDescription="@string/cartItEliminar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="8dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_comprar_ahora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="@string/cartItBtnComprarYa"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp" />

</LinearLayout>
